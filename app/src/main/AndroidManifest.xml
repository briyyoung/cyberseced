<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cyberseced">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LearningHome"/>
         <activity android:name=".LearningDetail" />
        <activity android:name=".Signup" />
        <activity android:name=".LearningEntry" />
        <activity android:name=".Login" />
        <activity android:name=".Home" />
        <activity android:name=".Quiz" />
        <activity android:name=".ForumHome"/>
        <activity android:name=".Profile" />
        <activity android:name=".EditProfile" />
        <activity android:name=".QuizExit" />
        <activity android:name=".Post" />
        <activity android:name=".PostFeed" />
        <activity android:name=".MoreInfo" />
    </application>

</manifest>